    package="com.courseapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.instructor.InstructorSearchActivity"></activity>
        <activity android:name=".activities.student.SearchCourseActivity" />
        <activity android:name=".activities.admin.instructormanagement.InstructorManagement" />
        <activity android:name=".activities.student.ViewStudentEnrolledCourses" />
        <activity android:name=".activities.student.ViewStudentCourseDetail" />
        <activity android:name=".activities.student.ViewStudentCourses" />
        <activity android:name=".activities.instructor.CourseConfiguration" />
        <activity android:name=".activities.instructor.InstructorCourseEdit" />
        <activity android:name=".activities.instructor.CourseList" />
        <activity android:name=".activities.admin.studentmanagement.StudentManagementActivity" />
        <activity android:name=".activities.admin.coursemanagement.EditCourse" />
        <activity android:name=".activities.admin.instructormanagement.NewInstructor" />
        <activity android:name=".activities.admin.studentmanagement.NewStudent" />
        <activity android:name=".activities.admin.coursemanagement.NewCourse" />
        <activity android:name=".activities.admin.coursemanagement.CourseManagement" />
        <activity android:name=".activities.DashboardActivity" />
        <activity android:name=".activities.authentication.SignupActivity" />
        <activity android:name=".activities.authentication.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
    </application>

</manifest>